{
  "description": "Keyboard shortcuts for basecamp",
  "manifest_version": 2,
  "name": "Basecamp Keyboard Shortcuts",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    { 
      "matches": ["*://*.basecamp.com/*"], 
      "js": ["basecamp.js"], 
      "css": ["basecamp.css"],
      "run_at": "document_idle", 
      "all_frames": true 
    }
  ]
}
