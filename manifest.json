{
  "description": "Keyboard shortcuts for basecamp",
  "manifest_version": 2,
  "name": "Basecamp Keyboard Shortcuts",
  "version": "1.0",
  "content_scripts": [
    { 
      "matches": ["*://*.basecamp.com/*"], 
      "js": ["basecamp.js"], 
      "css": ["basecamp.css"],
      "run_at": "document_idle", 
      "all_frames": true 
    }
  ]
}
